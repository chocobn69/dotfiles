bindsym $mod+w exec --no-startup-id firefox
bindsym $mod+i exec --no-startup-id kitty --class weechat weechat
bindsym $mod+s exec --no-startup-id slack

# mod + x lock screen
bindsym $mod+x exec --no-startup-id xscreensaver-command -lock 


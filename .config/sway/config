# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
set $monitor1 eDP-1
set $monitor2 HDMI-A-1
# output $monitor2 pos 0 0 res 1920x1080
output $monitor2 pos 0 0 res 3440x1440
output $monitor1 pos 1920 0 res 1600x900

bindswitch --locked lid:on output $monitor1 disable
bindswitch --locked lid:off output $monitor1 enable

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10
font pango:Fira  Mono 12

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec alacritty

# kill focused window
bindsym $mod+Shift+x kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
# bindsym $mod+Left focus left
# bindsym $mod+Down focus down
# bindsym $mod+Up focus up
# bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+m move right

# alternatively, you can use the cursor keys:
# bindsym $mod+Shift+Left move left
# bindsym $mod+Shift+Down move down
# bindsym $mod+Shift+Up move up
# bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+g split h;exec alacritty

# split in vertical orientation
bindsym $mod+v split v;exec alacritty

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# take fullscreen screenshot and copy into clipoard
bindsym $mod+Shift+s exec grimshot save area - | swappy -f -

# change container layout (stacked, tabbed, toggle split)
#bindsym $mod+s layout stacking
#bindsym $mod+z layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+q focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
set $wterm "1"
set $wweb "2"
set $wdev "3"
set $wslack "4"
set $wx2go "5"
set $wirc "6"
set $wmail "7"

bindsym $mod+1 workspace number $wterm
bindsym $mod+2 workspace number $wweb
bindsym $mod+3 workspace number $wdev
bindsym $mod+4 workspace number $wslack
bindsym $mod+5 workspace number $wx2go
bindsym $mod+6 workspace number $wirc
bindsym $mod+7 workspace number $wmail
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move container to workspace number $wterm
bindsym $mod+Shift+2 move container to workspace number $wweb
bindsym $mod+Shift+3 move container to workspace number $wdev
bindsym $mod+Shift+4 move container to workspace number $wslack
bindsym $mod+Shift+5 move container to workspace number $wx2go
bindsym $mod+Shift+6 move container to workspace number $wirc
bindsym $mod+Shift+7 move container to workspace number $wmail
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# reload the configuration file
bindsym $mod+Shift+c swaymsg reload
# exit sway
bindsym $mod+Shift+e exec --no-startup-id swaymsg exit
# clipster integration
bindsym $mod+c exec clipster -sp
# toggle mpc
bindsym $mod+p exec mpc toggle
# next mpc
bindsym $mod+n exec mpc next

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym m resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

default_border none


focus_follows_mouse yes

assign [app_id="brave-browser"] number $wweb
assign [class="Slack"] number $wslack
assign [app_id="weechat"] number $wirc
assign [app_id="thunderbird"] number $wmail

# volume control
bindsym XF86AudioLowerVolume exec /usr/bin/pactl set-sink-volume @DEFAULT_SINK@ '-5%'
bindsym XF86AudioRaiseVolume exec /usr/bin/pactl set-sink-volume @DEFAULT_SINK@ '+5%'
bindsym XF86AudioMute exec /usr/bin/pactl set-sink-mute @DEFAULT_SINK@ toggle

# launch several app
bindsym $mod+m exec --no-startup-id thunderbird
bindsym $mod+w exec --no-startup-id brave
bindsym $mod+i exec --no-startup-id alacritty --class weechat --command zsh -c weechat
bindsym $mod+s exec --no-startup-id slack

# mod + x lock screen
bindsym $mod+x exec swaylock -f -c 000000

bindsym $mod+d exec alacritty --class 'launcher' --command bash -c 'compgen -c | sort -u | fzf | xargs -r swaymsg -t command exec'
for_window [app_id="^launcher$"] floating enable, border pixel 1, resize set width 25 ppt height 20 ppt, move position 0 px 0 px

exec swayidle -w \
	timeout 180 'swaylock -f -c 000000' \
	timeout 300 'swaymsg "output * dpms off"' \
	resume 'swaymsg "output * dpms on"'

bar {
     swaybar_command waybar
}
exec mako --config ~/.config/mako/config 2>&1 >/tmp/mako.log
exec --no-startup-id gammastep -l 45.750000:4.850000
exec --no-startup-id clipster -d

# keyboards
input "type:keyboard" {
    xkb_layout "us"
    xkb_variant "altgr-intl"
    xkb_options "ctrl:nocaps"
}

input "type:keyboard" xkb_model "pc101"

# wallpaper
output $monitor2 bg ~/Dropbox/wallpapers/bg-1.jpg stretch
output $monitor1 bg ~/Dropbox/wallpapers/bg-1.jpg stretch
